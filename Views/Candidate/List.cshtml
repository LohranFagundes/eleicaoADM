@model ElectionAdminPanel.Web.Models.CandidateListViewModel

@{ 
    ViewData["Title"] = "Gerenciar Candidatos";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4"><i class="bi bi-person-badge-fill me-2"></i>@ViewData["Title"]</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-primary" id="createCandidateBtn"><i class="bi bi-plus-circle me-2"></i>Criar Novo Candidato</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="List" method="get" class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label for="search" class="visually-hidden">Buscar</label>
                    <input type="text" class="form-control" id="search" name="search" value="@Model.Search" placeholder="Buscar por nome ou número...">
                </div>
                <div class="col-md-4">
                    <label for="positionId" class="visually-hidden">Cargo</label>
                    <select class="form-select" id="positionId" name="positionId" asp-for="PositionId" asp-items="ViewBag.Positions">
                        <option value="">Todos os Cargos</option>
                    </select>
                </div>
                <div class="col-md-auto">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search me-2"></i>Buscar</button>
                </div>
                <div class="col-md-auto">
                    <a asp-action="List" class="btn btn-outline-secondary"><i class="bi bi-arrow-clockwise me-2"></i>Limpar Filtro</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Candidates != null && Model.Candidates.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Foto</th>
                                <th>@Html.DisplayNameFor(model => model.Candidates.FirstOrDefault().Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Candidates.FirstOrDefault().Number)</th>
                                <th>@Html.DisplayNameFor(model => model.Candidates.FirstOrDefault().PositionId)</th>
                                <th>@Html.DisplayNameFor(model => model.Candidates.FirstOrDefault().IsActive)</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Candidates)
                            {
                                <tr>
                                    <td>
                                        @if (item.HasPhoto)
                                        {
                                            <img src="@Url.Action("GetPhoto", "Candidate", new { id = item.Id })" alt="@item.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <i class="bi bi-image-fill" style="font-size: 2rem; color: #ccc;"></i>
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Number)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PositionTitle)</td> @* Display Position Title *@
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inativo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning candidate-edit-btn" title="Editar"><i class="bi bi-pencil"></i></a>
                                            <button type="button" class="btn btn-sm btn-danger candidate-delete-btn" data-bs-toggle="modal" data-bs-target="#deleteModal_@item.Id" title="Excluir"><i class="bi bi-trash"></i></button>
                                        </div>

                                        @* Delete Confirmation Modal *@
                                        <div class="modal fade" id="deleteModal_@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel_@item.Id" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteModalLabel_@item.Id">Confirmar Exclusão</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Tem certeza de que deseja excluir o candidato <strong>"@item.Name"</strong>?</p>
                                                        <div class="alert alert-warning">
                                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                                            <strong>Atenção:</strong> Esta ação não pode ser desfeita e removerá permanentemente o candidato e todos os votos associados.
                                                        </div>
                                                        <div class="candidate-info">
                                                            <small class="text-muted">
                                                                <strong>Número:</strong> @item.Number | 
                                                                <strong>Cargo:</strong> @item.PositionTitle |
                                                                <strong>Status:</strong> @(item.IsActive ? "Ativo" : "Inativo")
                                                            </small>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                        <form asp-action="Delete" method="post" style="display:inline;">
                                                            <input type="hidden" name="id" value="@item.Id" />
                                                            <button type="submit" class="btn btn-danger">Excluir</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Pagination *@
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="List" asp-route-page="@(Model.CurrentPage - 1)" asp-route-search="@Model.Search" asp-route-positionId="@Model.PositionId">Anterior</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="List" asp-route-page="@i" asp-route-search="@Model.Search" asp-route-positionId="@Model.PositionId">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="List" asp-route-page="@(Model.CurrentPage + 1)" asp-route-search="@Model.Search" asp-route-positionId="@Model.PositionId">Próxima</a>
                        </li>
                    </ul>
                </nav>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    Nenhum candidato encontrado com os critérios de busca.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Check for sealed elections and disable candidate actions if needed
        window.addEventListener('load', function() {
            checkSealedElectionsForCandidates();
        });
        
        async function checkSealedElectionsForCandidates() {
            try {
                const response = await fetch('/Election/GetSealedElectionsStatus');
                if (response.ok) {
                    const result = await response.json();
                    if (result.hasSealedElections) {
                        disableCandidateActions();
                    }
                }
            } catch (error) {
                console.log('Could not check sealed election status:', error);
            }
        }
        
        function disableCandidateActions() {
            // Disable create button
            const createBtn = document.getElementById('createCandidateBtn');
            if (createBtn) {
                createBtn.classList.add('disabled');
                createBtn.setAttribute('aria-disabled', 'true');
                createBtn.onclick = function(e) {
                    e.preventDefault();
                    alert('Não é possível criar novos candidatos quando há eleições lacradas.');
                    return false;
                };
            }
            
            // Disable edit and delete buttons
            document.querySelectorAll('.candidate-edit-btn').forEach(btn => {
                btn.classList.add('disabled');
                btn.setAttribute('aria-disabled', 'true');
                btn.onclick = function(e) {
                    e.preventDefault();
                    alert('Não é possível editar candidatos quando há eleições lacradas.');
                    return false;
                };
            });
            
            document.querySelectorAll('.candidate-delete-btn').forEach(btn => {
                btn.classList.add('disabled');
                btn.setAttribute('aria-disabled', 'true');
                btn.onclick = function(e) {
                    e.preventDefault();
                    alert('Não é possível excluir candidatos quando há eleições lacradas.');
                    return false;
                };
            });
            
        }
    </script>
}
