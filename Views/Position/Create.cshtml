@model ElectionAdminPanel.Web.Models.PositionModel

@{ 
    ViewData["Title"] = "Criar Novo Cargo";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4"><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ElectionId" class="form-label"></label>
                    <select asp-for="ElectionId" class="form-select" asp-items="ViewBag.Elections">
                        <option value="">-- Selecione uma Eleição --</option>
                    </select>
                    <span asp-validation-for="ElectionId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaxCandidates" class="form-label"></label>
                    <input asp-for="MaxCandidates" type="number" class="form-control" />
                    <span asp-validation-for="MaxCandidates" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaxVotesPerVoter" class="form-label"></label>
                    <input asp-for="MaxVotesPerVoter" type="number" class="form-control" />
                    <span asp-validation-for="MaxVotesPerVoter" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OrderPosition" class="form-label"></label>
                    <input asp-for="OrderPosition" type="number" class="form-control" />
                    <span asp-validation-for="OrderPosition" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save me-2"></i>Criar</button>
                    <a asp-action="List" class="btn btn-secondary"><i class="bi bi-arrow-left-circle me-2"></i>Voltar para a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
